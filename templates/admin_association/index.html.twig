{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}
{% block bodyclass %}admin{% endblock %}
{% block body %}

    <main>
        <h1>Associations</h1>

        <a href="{{ path('admin_association_new') }}" class="button-link">Ajouter une association</a>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for association in associations %}
                <tr>
                    <td>{{ association.id }}</td>
                    <td>{{ association.name }}</td>
                    <td>{{ association.roles ? association.roles|json_encode : '' }}</td>
                    <td>{{ association.slug }}</td>
                    <td class="actions-button">
                        <a href="{{ path('admin_association_show', {'id': association.id}) }}">Voir</a>
                        <a href="{{ path('admin_association_edit', {'id': association.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="21">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </main>

{% endblock %}
