{% extends 'base.html.twig' %}

{% block title %}{{association.name}} - Forum Associatif{% endblock %}
{% block bodyclass %}associations-single{% endblock %}
{% block body %}
    <header>
        <img src="{{ asset('uploads/' ~ association.banner ~ '') }}" alt="Bannière de présentation de {{ association.name }}">
        <div class="associations-single__title">
            <div>
                <h1>{{association.name}}</h1>
                <p class="subtitle">{{association.catchphrase}}</p>
                <p class="category">Catégorie (non dynamique)</p>
            </div>
            <div>
                <img src="{{ asset('uploads/' ~ association.logo ~ '') }}" alt="Logo de l'association {{ association.name }}">
            </div>
        </div>
    </header>
    <main>
        {{ dump(association) }}
        {{ dump(images) }}
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-info"></i>
                    <p>Tu veux en savoir plus ?</p>
                </div>
            </div>
            <div class="content">
                <p>{{association.description}}</p>
            </div>
        </div>
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-camera-retro"></i>
                    <p>La vidéo de présentation</p>
                </div>
            </div>
            <div class="content">
                <video controls>
                    <source src="{{ asset('uploads/' ~ association.video ~ '') }}" type="video/mp4">
                </video>
            </div>
        </div>
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-tasks"></i>
                    <p>Les projets de l'asso</p>
                </div>
            </div>
            <div class="content">
                <p>Y'a pas la colonne en DB issou</p>
            </div>
        </div>
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-user-friends"></i>
                    <p>Les profils qu'on recherche</p>
                </div>
            </div>
            <div class="content">
                <p>{{association.profiletype | nl2br}}</p>
            </div>
        </div>
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-comments"></i>
                    <p>Prend contact avec nous</p>
                </div>
            </div>
            <div class="content">
                <p>{{association.description}}</p>
            </div>
        </div>
        <div class="associations-single__bloc">
            <div class="info">
                <div>
                    <i class="fas fa-images"></i>
                    <p>Galerie photos</p>
                </div>
            </div>
            <div class="content galerie">
                {% for image in images %}
                    <div class="galerie-image">
                        <img src="{{ asset('uploads/' ~ association.slug ~ '/images/' ~ image ~ '') }}" alt="Galerie - Image {{ association.name }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
